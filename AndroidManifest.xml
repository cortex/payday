<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="se.frikod.payday"
          android:versionCode="9"
          android:versionName="1.8">

    <uses-sdk
            android:minSdkVersion="10"
            android:targetSdkVersion="16"/>

    <uses-permission android:name="com.liato.bankdroid.permission.READ_ACCESS_BANK_TRANSACTIONS"/>

    <permission
            android:name="com.liato.bankdroid.permission.READ_ACCESS_BANK_TRANSACTIONS"
            android:description="@string/bankdroid_permission_provider_desc"
            android:label="@string/bankdroid_permission_provider_label"
            android:protectionLevel="dangerous"/>

    <application
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/PaydayTheme">
        <activity
                android:name="se.frikod.payday.PaydayActivity"
                android:label="@string/title_activity_budget">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="se.frikod.payday.SettingsActivity">
        </activity>

        <receiver android:name="se.frikod.payday.PaydayWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/payday_widget"/>
        </receiver>

        <activity android:name="se.frikod.payday.AboutPaydayActivity">
        </activity>
        <activity
                android:name="se.frikod.payday.SetupActivity"
                android:label="@string/setup_activity_title">
        </activity>

    </application>

</manifest>