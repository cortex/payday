<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignLeft="@+id/budgetTextView"
    android:layout_below="@+id/gridLayout1"
    android:layout_gravity="top"
    android:background="@drawable/paper" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top" >

        <TextView
            android:id="@+id/balanceTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="@string/balance_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#666" />

        <TextView
            android:id="@+id/balanceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/balance"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24pt" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/daysToPaydayTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="@string/days_until_payday_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#666" />

        <TextView
            android:id="@+id/daysToPaydayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/days_until_payday"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24pt" />

    </TableRow>

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/line_separator" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/budgetTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_marginTop="24dp"
            android:lines="2"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/daily_budget_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#666" />

        <TextView
            android:id="@+id/budgetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:shadowColor="#feee"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/daily_budget"
            android:textSize="@dimen/budgetfont"
            tools:context=".Budget" />

    </TableRow>

</TableLayout>