<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper" >

    <TextView
        android:id="@+id/daysToPaydayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        
        android:gravity="center"
        android:text="@string/days_until_payday"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24pt" />

    <TextView
        android:id="@+id/daysToPaydayTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/daysToPaydayView"
        android:text="@string/days_until_payday_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666" />

<View
    android:id="@+id/separator"
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:layout_below="@id/daysToPaydayTitleTextView"
    android:layout_margin="10dp"
    android:background="@drawable/line_separator" />

    <TextView
        android:id="@+id/budgetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/separator"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:shadowColor="#feee"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="@string/daily_budget"
        android:textSize="@dimen/budgetfont"
        tools:context=".Budget" />

    <TextView
        android:id="@+id/budgetTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/budgetTextView"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@id/budgetTextView"
        android:lines="2"
        android:maxLines="2"
        android:minLines="2"
        android:text="@string/daily_budget_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666" />

</RelativeLayout>