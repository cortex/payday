<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp"
    >

    <LinearLayout
        style="@style/card"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/budgetLabel"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:textStyle="bold"
            android:text="@string/daily_budget_title"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/balanceLabel"
                    android:textSize="22sp"
                    android:text="@string/balance_title"/>

                <TextView
                        android:id="@+id/balanceNumber"
                        android:textSize="22sp"
                        android:layout_gravity="right|end"
                        android:text="@string/emptyAmount"/>
            </TableRow>

            <TableRow
                    style="@style/tableLine"
                    android:layout_height="1dp"
                    android:layout_margin="1dp">
            </TableRow>

            <!--
                            <TableRow
                                android:id="@+id/tableRow2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/goalLabel"
                                    style="@style/paydayLabel"
                                    android:text="@string/goal_label" />

                                <TextView
                                    android:id="@+id/goalNumber"
                                    style="@style/paydayNumber"
                                    android:text="-" />
                            </TableRow>
              -->

            <TableRow
                    android:id="@+id/spentTodayRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/spentTodayLabel"
                        android:text="@string/spentToday_title"/>

                <TextView
                        android:id="@+id/spentTodayNumber"
                    android:layout_gravity="right|end"

                    android:text="@string/emptyAmount"/>
            </TableRow>
        </TableLayout>

        <TableLayout
                android:id="@+id/budgetItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1">

            <TableRow>

                <TextView
                        android:id="@+id/addBudgetItem"
                        android:text=" +"
                        android:textSize="22sp"
                        android:layout_gravity="bottom"/>


                <TextView
                        android:id="@+id/addBudgetItemButton"
                        android:text="@string/add_budget_item"
                        android:textStyle="italic"
                        android:textColor="#aaa"
                        android:clickable="true"
                        android:layout_gravity="bottom|right"/>
            </TableRow>

        </TableLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#eee"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:stretchColumns="0,1">
            <TableRow>

                <TextView

                        android:layout_height="32dp"
                        android:textSize="22sp"
                        android:layout_gravity="left"
                        android:text=" รท"/>


                <TextView
                        android:id="@+id/daysToPaydayNumber"

                        android:layout_height="32dp"
                        android:textSize="22sp"
                        android:layout_gravity="right"
                        android:text="@string/emptyAmount"/>

                <TextView
                        android:id="@+id/daysToPaydayLabel"
                        android:textSize="22sp"
                        android:layout_gravity="right"
                        android:text="@string/days_until_payday_title"/>

            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee"/>

        <TextView
            android:id="@+id/budgetNumber"
            android:layout_gravity="right|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:layout_marginBottom="0dp"
            android:text="@string/emptyAmount"/>

    </LinearLayout>

</FrameLayout>